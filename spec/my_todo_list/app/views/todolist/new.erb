
<div class="row">
  <div class="col-sm-6 col-md-offset-3">
    <form role="form" action="/todos" method="post">
      <div class="form-group">
        <label for="title">Title:</label> <br />
        <input type="text" name="title" class="form-control">
      </div>
      <div class="form-group">
        <label for="todo">Todo:</label>
        <textarea rows="5" cols="10" name="todo" class="form-control"></textarea>
      </div>

        <div class="radio">
          <label><input type="radio" name="status" value="pending" checked>Pending</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="status" value="done">Done</label>
        </div>
      <input type="submit" class="btn btn-success">
    </form>
   </div>
</div>
